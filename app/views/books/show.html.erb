<style type="text/css">
.box {
  width:250px;
  padding-top:5px;
  border-style:solid;
  border-color:#336699;
  border-width:1px;
  padding-left:3px;
  padding-bottom:10px;
}
</style>


<div class="row">

	<div class="col-md-4">

		<%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
		<br>
		<br>
	
	</div>
	<% if user_signed_in? %>
	<ul class="nav navbar-nav navbar-right">
	<button><%= link_to "Reserve", new_book_reservation_path(@book) %></button>
	<br>	
	</ul>
	<%end%>
	<div class="col-md-8">

	<div class="book-info">
		<b><h2><center><%= @book.title %></center></b></h2>
		<h3><i><b>Author : </b></i><%= @book.author %></h3>
		<i><h4><b>Price : &#8369; <%= @book.price %>0 php</b></h4></i>
		<p><%= @book.description %></p>
		
	</div>

	<%= render @book.reservations %>

	</div>



</div>

<div class="row">

	<div class="col-md-4">



	</div>

</div>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>

	<% if @book.user_id == current_user.id %>

	<%= link_to "Edit", edit_book_path(@book) %>
	<%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" } %>


	<% end %>

<% end %>